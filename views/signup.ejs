<body>

 <!--Navbar -->
     <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
           <a class="main-logo pull-left" href="/">CodeFighter</a>
        </div>
        <div class="navbar-collapse collapse">
          <form class="navbar-form navbar-right" role="form">
			<a href="/login" class="btn btn-danger navbarbtn" data-toggle="modal"><span class="glyphicon glyphicon-lock"></span> Login</a>
			<a href="/signup" class="btn btn-danger navbarbtn"><span class="glyphicon glyphicon-user"></span> </span>Signup</a>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </div><!-- End navbar -->
	
	
<div class="container" style="padding-top: 125px">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="glyphicon glyphicon-user"></span> Secure Signup</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger">
		
		<% if (message[0]) { %>
			<%= message[0] %></br>
		<% } %>
		<% if (message[1]) { %>
			<%= message[1] %></br>
		<% } %>
		<% if (message[2]) { %>
			<%= message[2] %></br>
		<% } %>
		<% if (message[3]) { %>
			<%= message[3] %></br>
		<% } %>
		
		</div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>

		<button type="submit" class="btn btn-danger">Signup</button>
	</form>

	<hr>
	
	<p>Or sign in with <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a></p>
	<p>Or sign in with <a href="/auth/facebook" class="btn btn-info"><span class="fa fa-facebook"></span> Facebook</a></p>
	<p>Already have an account? <a href="/login">Login</a></p>
	<p>Or go <a href="/">home</a>.</p>

</div>

</div>
